<section class="m-auto p-3 rounded-lg mb-3 drop-shadow-sm" style="background-color: var(--sec-color);" id="overlay">
    <h2 class="text-lg pb-3">Create new card</h2>
    <form action="/trello/createCard/<%= project.id %>" class="">
        <input id="projectIdInput" type="hidden" name="projectId" value="{{projectId}}">
        <input class="border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" type="text" name="cardName" placeholder="Card Name" required>
        <textarea type="text" name="cardDescription" placeholder="Card Description" class="resize-none mt-1 border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md"></textarea>
        <select name="board" id="board-select" class="border-2 mt-1 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md">
            <option id="select-option" value="" class="rounded-md">Select a board</option>
        </select>
        <select id="list-select" name="list" class="border-2 mt-1 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md">
            <option id="liststate" value="" class="rounded-md">No board selected</option>
        </select>
        <div class="flex flex-row w-full">
            <input type="button" class="mt-2 cursor-pointer font-semibold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" value="Cancel" id="cardClose">
            <input type="submit" class="ml-auto mt-2 cursor-pointer font-semibold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" value="Create" id="create-card-btn">
        </div>
    </form>
</section>
<script src="/scripts/listLists.js"></script>
