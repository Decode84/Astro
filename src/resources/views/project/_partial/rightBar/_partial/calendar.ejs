<div id="calendar-a"></div>

<div id="add-event-btn-container" class="py-3 px-5 mt-3 rounded-lg flex flex-row items-center bg-white drop-shadow-sm">
  <button id="add-event-btn" onclick="addEventBtnClicked()">
    <svg id="plus-btn" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
    </svg>
  </button>
  <p class="ml-1">Add Event</p>
</div>

<div id="submit-event-btn-container" class="py-3 px-5 mt-3 rounded-lg flex-col items-center bg-white hidden drop-shadow-sm">
  <input id="time" type="datetime-local" value="" class="border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" name="time">
  <input id="name" type="text" class="my-2 border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" name="name" placeholder="event name" required />
  <button id="submit-event-btn" onclick="submitEventBtnClicked()" class="float-right ml-auto cursor-pointer font-semibold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">Add</button>
  <button id="cancel-event-btn" onclick="cancelEventBtnClicked()" class="float-left ml-auto cursor-pointer font-semibold rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">Cancel</button>
</div>

<div id="cal-events-container" class="py-3 px-5 mt-3 text-lg rounded-lg mb-0.5 bg-white drop-shadow-sm">
  <h2>Events</h2>
  <div id="cal-events">
    <div id="event-template" class="hidden flex flex-row items-center">
      <p class="event-time mr-1"></p>
      <p class="event-name truncate ..."></p>
      <button class="event-delete ml-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="rgb(255, 100, 100)" stroke-width="1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      </button>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/color-calendar/dist/bundle.js"></script>
<script src="/scripts/calendar.js"></script>