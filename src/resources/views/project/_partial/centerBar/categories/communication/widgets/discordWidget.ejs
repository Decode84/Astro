<% if (discordInfo) { %>
    <div class="bg-white rounded-lg w-full drop-shadow-sm px-4 py-3 mb-3">
        <h2 class="text-lg pb-3">Discord</h2>
        <hr class="py-1">
        <% if (discordInfo.AuthLink) { %>
            <div class="flex flex-row pb-1">
                <p class="inline">Create discord server for project</p>
                <button class="rounded-md ml-auto w-20 shadow-sm" style="background-color: var(--sec-color);">
                    <a href="https://discord.new/dQCDNNwCPuhE" target="_blank">Create</a>
                </button>
            </div>
            <div id="login-container" class="flex flex-row pb-1">
                <p class="inline">Link your Projecthub account with Discord and invite the bot to your server</p>
                <button class="rounded-md ml-auto w-20 shadow-sm" style="background-color: var(--sec-color);">
                    <a id="login" href="<%- discordInfo.AuthLink%>">Link</a>
                </button>
                <p id="info"></p>
                <script type="text/javascript" src="/scripts/discordAuth.js"></script>
            </div>
            <%- include('../../_partial/infoMsg', { message: "Type '/link' in the Discord channel(with the bot) to link with this Project" }); %>
    <% } else { %>
            <div class="flex flex-row pb-1">
                <p class="inline">Open your discord server</p>
                <button class="rounded-md ml-auto w-20 shadow-sm" style="background-color: var(--sec-color);">
                    <a href="<%- discordInfo.ServerInviteLink%>" target="_blank">Open</a>
                </button>
            </div>
            <div id="chat">
                <div id="message-container" class="max-h-60 overflow-y-auto"></div>
                <input id="input" type="text" placeholder="Type message" class="border-2 py-1 p-2 mt-2 border-gray-200 bg-gray-50 w-full rounded-md" />
                <script type="text/javascript" src="/scripts/discordChat.js"></script>
            </div>
        <% } %>
    </div>
<% }%>
