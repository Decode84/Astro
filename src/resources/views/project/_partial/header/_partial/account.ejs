<div class="px-5 w-full h-full flex flex-row items-center justify-center">
  <img class="w-10 h-10 rounded-md" src="https://ui-avatars.com/api/?name=<%= user.name %>" alt="">
  <div class="m-0">
    <p class="text-sm ml-2 font-normal">
      <%= user.name %>
    </p>
    <p class="text-sm ml-2 font-light">
      <%= user.email %>
    </p>
  </div>

  <form class="ml-auto" action="/logout" method="post">
    <button type="submit" class="font-bold py-2 rounded focus:outline-none focus:shadow-outline">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 ml-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
    </button>
  </form>
</div>