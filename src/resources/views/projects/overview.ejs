<section class="pt-6 px-4">
    <header class="w-full flex flex-1 justify-between" style="min-width: var(--min-overview-w);">
        <h2 class="text-2xl font-medium float-left">Projects</h2>
        <div class="flex flex-col justify-center float-right" style="width: var(--right-col-w); background-color: var(--sec-color)">
            <%- include('../project/_partial/header/_partial/account'); %>
        </div>
    </header>
    <div class="mt-3 w-full">
        <a href="/create-project" class="px-4 text-sm p-2 rounded-md shadow-md text-white" style="background-color: var(--acc-color)">Create a new project</a>
    </div>
    <main class="px-6 py-4 text-sm bg-white rounded-lg mt-8" style="min-width: var(--min-overview-w);">
        <h5 class="text-lg font-medium mb-2">Projects overview</h5>
        <table class="w-full text-left">
            <thead class="text-gray-500">
                <tr class="h-10">
                    <th class="pr-4 font-normal">Name</th>
                    <th class="pr-4 font-normal">Members</th>
                    <th class="pr-4 font-normal">Last modified</th>
                    <th class="pr-4 font-normal">Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% let i = 0; %>
            <% projects.forEach((project) => { %>
                <% if (i % 2 === 0) { %>
                <tr class="h-12 border-t border-gray-100">
                    <td class="pr-4"><a href="/project" style="color: var(--acc-color)"><%= project.name %></a></td>
                    <td class="pr-4 text-gray-500 text-xs pl-6"><%= project.members.length %> </td>
                    <td class="pr-4 text-gray-500 text-xs">2 hours ago.</td>
                    <td class="pr-4 text-gray-500 text-xs">2 hours ago.</td>
                    <td class="w-12">
                        <div class="flex items-center justify-end h-10">
                            <form action="/edit" method="get" class="mx-2">
                                <input type="hidden" name="projectId" value="<%= project.id %>">
                                <button class="h-10 text-teal-400 cursor-pointer" type="submit">
                                    <span class="flex items-center justify-between">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="yellow" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </span>
                                </button>
                            </form>
                            <form action="/projects" method="post" class="mx-2">
                                <input type="hidden" name="projectId" value="<%= project.id %>">
                                <button class="h-10 text-teal-400 cursor-pointer" type="submit">
                                    <span class="flex items-center justify-between">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="red" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% } else { %>
                <tr class="h-12 border-t border-gray-100">
                    <td class="pr-4"><a href="/project" style="color: var(--acc-color)"><%= project.name %></a></td>
                    <td class="pr-4 text-gray-500 text-xs pl-6"><%= project.members.length %> </td>
                    <td class="pr-4 text-gray-500 text-xs">2 hours ago.</td>
                    <td class="pr-4 text-gray-500 text-xs">2 hours ago.</td>
                    <td class="w-12">
                        <div class="flex items-center justify-end h-10">
                            <form action="/edit" method="post" class="mx-2">
                                <input type="hidden" name="projectId" value="<%= project.id %>">
                                <button class="h-10 text-teal-400 cursor-pointer" type="submit">
                                    <span class="flex items-center justify-between">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="yellow" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </span>
                                </button>
                            </form>
                            <form action="/projects" method="post" class="mx-2">
                                <input type="hidden" name="projectId" value="<%= project.id %>">
                                <button class="h-10 text-teal-400 cursor-pointer" type="submit">
                                    <span class="flex items-center justify-between">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="red" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </span>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% } %>
                <% i++; %>
            <% }); %>
            </tbody>
        </table>
    </main>
</section>