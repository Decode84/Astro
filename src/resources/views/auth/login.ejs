<header class="flex flex-row" style="min-width: var(--min-window-w); height: var(--header-h)">
    <div class="pl-2 py-4 flex flex-row items-center" style="width: var(--left-col-w);">
        <%- include('../project/_partial/header/_partial/logo'); %>
    </div>
</header>
<main class="content-evenly flex items-center justify-center" style="height: calc(100vh - var(--header-h))">
    <div class="w-96">
        <% if (message.toString() !=="" ) { %>
            <%- include('./_partial/infoBox', { message: message}); %>
                <% } %>
                    <form action="/authenticate" method="post" class="p-8 mx-auto border-t-8 shadow-md rounded-md" style="background-color: var(--pri-color);border-color: var(--acc-color)">
                        <h1 class="text-2xl text-gray-800 text-center font-bold">Login to Project Hub</h1>

                        <label class="text text-left block mb-2 mt-4" for="username">Username</label>
                        <input class="border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" name="username" id="username" required />

                        <label class="text text-left block mb-2 mt-4" for="password">Password</label>
                        <input type="password" class="border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" name="password" id="password" required />

                        <a class="hover:text-indigo-600 block mt-6 text-sm" href="/forgot">Forgot your password?</a>
                        <a class="hover:text-indigo-600 block text-sm" href="/register">Don't have an account?</a>
                        <div class="text-center pt-4">
                            <button class="py-2 px-4 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" style="background-color: var(--acc-color)" id="submit" type="submit">Login</button>
                        </div>
                    </form>
    </div>
</main>