<section class="content-evenly min-h-screen">
    <div class="py-48">
        <form action="/auth/authenticate" method="post" class="p-8 max-w-md mx-auto bg-white border-t-8 border-indigo-700 shadow-md rounded-md">
            <h1 class="text-2xl text-gray-800 text-center font-bold">Login to Project Hub</h1>

            <label class="text text-left block mb-2 mt-4" for="username">Username</label>
            <input class="border-2 py-1 p-2 border-gray-200 bg-gray-50 w-full rounded-md" name="username" id="username" />

            <label class="text text-left block mt-6" for="password">Password</label>
            <div class="relative w-full">
                <div class="absolute inset-y-0 right-0 flex items-center px-2">
                    <input class="hidden password-clickety" id="clickety" type="checkbox" />
                    <label class="bg-indigo-200 hover:bg-indigo-400 rounded px-1 py-1 
                    text-sm text-gray-600 cursor-pointer" id="pwd_label" for="clickety">show</label>
                </div>  
                <input type="password" class="border-2 py-1 p-2 rounded-md w-full border-gray-200 bg-gray-50" name="password" id="password" />
            </div>

            <a class="hover:text-indigo-600 block mt-6 text-sm" href="/auth/forgot">Forgot your password?</a>
            <a class="hover:text-indigo-600 block text-sm" href="/auth/register">Don't have a user?</a>
            <div class="mx-16">
                <button class="bg-indigo-700 rounded w-full text-xl text-white p-4
                mt-6" id="submit" type="submit">Login</button>
            </div>
        </form>
    </div>
</section>